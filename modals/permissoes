<div id="output"></div>

    <script>
        // Texto da anotação
        const texto = `
# Travar arquivo como imutável #
chattr +i <path/arquivo>
# Destravar arquivo como imutável #
chattr -i <path/arquivo>
# Verificar se arquivo está travado como imutável #
lsattr <path/arquivo>

        `;

        // Função para processar o texto
        function processarTexto(texto) {
            // Substitui títulos (linhas que começam com #) por <h1>
            texto = texto.replace(/^# (.+?) #$/gm, '<h2>$1</h2>');
            // Substitui comandos (texto entre <>) por <code>
            texto = texto.replace(/&lt;(.+?)&gt;/g, '<code>&lt;$1&gt;</code>');
            return texto;
        }

        // Exibe o texto processado na div #output
        document.getElementById('output').innerHTML = processarTexto(texto);
    </script>